{
    "name": "t3planet/rte-ckeditor-pack",
    "type": "typo3-cms-extension",
    "description": "CKEditor Pack TYPO3 extension provides a modern, integrated CKEditor build many optimized features, accessibility tools, AI assistance, and collaboration-friendly optionsâ€”all without managing scattered YAML files. Built for stability and clean integration, it streamlines editing workflows and enhances TYPO3 content quality.",
    "homepage": "https://t3planet.de/ckeditor-pack",
    "authors": [
        {
            "name": "Team T3Planet"
        }
    ],
    "license": "GPL-2.0-or-later",
    "keywords": [
        "TYPO3",
        "CKEditor",
        "RTE",
        "AI"
    ],
    "support": {
        "issues": "https://github.com/T3Planet/rte_ckeditor_pack/issues"
    },
    "require": {
        "php": ">= 8.1 < 8.5",
        "typo3/cms-core": ">= 12.4.25 || ^13.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89.2",
        "phpstan/phpdoc-parser": "^1.33.0",
        "phpunit/phpunit": "^10.5.58",
        "typo3/coding-standards": "^0.8.0"
    },
    "autoload": {
        "psr-4": {
            "T3Planet\\RteCkeditorPack\\": "Classes"
        }
    },
    "replace": {
        "typo3-ter/rte-ckeditor-pack": "self.version"
    },
    "config": {
        "allow-plugins": {
            "a9f/fractor-extension-installer": true,
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "bin-dir": ".Build/bin",
        "lock": false,
        "sort-packages": true,
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/public",
            "extension-key": "rte_ckeditor_pack"
        }
    },
    "scripts": {
        "doc-init": "docker run --rm --pull always -v $(pwd):/project -it ghcr.io/typo3-documentation/render-guides:latest --config=Documentation",
        "doc-make": "make docs",
        "doc-watch": "docker run --rm -it --pull always \\\n  -v \"./Documentation:/project/Documentation\" \\\n  -v \"./Documentation-GENERATED-temp:/project/Documentation-GENERATED-temp\" \\\n  -p 5173:5173 ghcr.io/garvinhicking/typo3-documentation-browsersync:latest\nopen \"http://localhost:5173/Documentation-GENERATED-temp/Index.html\"",
        "cs": "PHP_CS_FIXER_IGNORE_ENV=1 php ./.Build/bin/php-cs-fixer fix --dry-run -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./",
        "csfix": "PHP_CS_FIXER_IGNORE_ENV=1 php ./.Build/bin/php-cs-fixer fix -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./"
    },
    "scripts-descriptions": {
      "doc-init": "Initialize documentation rendering",
      "doc-make": "Render documentation",
      "doc-watch": "Render documentation including a watcher"
    }
}
